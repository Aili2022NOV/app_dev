<div id="<%= dom_id quote %>">
  <p>
    <strong>Text:</strong>
    <%= quote.text %>
  </p>

  <p>
    <strong>Publication year:</strong>
    <%= quote.publication_year %>
  </p>

  <p>
    <strong>Is public:</strong>
    <%= quote.is_public %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= quote.comment %>
  </p>

  <p>
    <strong>Users:</strong>
    <%= quote.user.fname %>
  </p>

  <p>
    <strong>Philosophers:</strong>
    <%= quote.philosopher.fname %>
  </p>

</div>
