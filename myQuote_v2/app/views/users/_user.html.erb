<div id="<%= dom_id user %>" class="my-4">
<!-- User's First Name -->
  <div class="mb-3">
    <label class="form-label"><strong>Fname:</strong></label>
    <div><%= user.fname %></div>
  </div>

  <!-- User's Last Name --> 
  <div class="mb-3">
    <label class="form-label"><strong>Lname:</strong></label>
    <div><%= user.lname %></div>
  </div>

  <!-- User's Email Address -->
  <div class="mb-3">
    <label class="form-label"><strong>Email:</strong></label>
    <div><%= user.email %></div>
  </div>

  <!-- Encrypted Current Password -->
  <div class="mb-3">
    <label class="form-label"><strong>Current Password:</strong></label>
    <span class="text-danger">ENCRYPTED</span>
  </div>

  <!-- User's Account Type (Administrator or Standard User) -->
  <div class="mb-3">
    <label class="form-label"><strong>Account Type:</strong></label>
    <div>
      <% if user.is_admin %>
        <span>Administrator</span>
      <% else %>
        <span>Standard User</span>
      <% end %>
    </div>
  </div>

  <!-- User's Status -->  
  <div class="mb-3">
    <label class="form-label"><strong>Status:</strong></label>
    <div><%= user.status %></div>
  </div>

</div>